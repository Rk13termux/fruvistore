}

.card-content {
  padding: 1.5rem;
}

.card-title {
  font-size: 1.3rem;
  margin-bottom: 0.5rem;
  color: var(--txt);
}

.card-description {
  color: var(--muted);
  margin-bottom: 1rem;
  line-height: 1.5;
}

.card-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 1rem;
  font-size: 0.9rem;
}

.meta-item {
