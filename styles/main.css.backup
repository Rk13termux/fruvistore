.lock-text {
  color: white;
  font-weight: 600;
  text-align: center;
  padding: 0 1rem;
}

/* Disabled Controls */
.quantity-selector.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.quantity-selector.disabled input {
  background: #2a2a2a;
  cursor: not-allowed;
}

/* Locked Buttons */
.btn-locked {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  color: white;
  border: none;
  padding: 1rem;
  border-radius: 10px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  width: 100%;
}

.btn-locked:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(255,107,107,0.3);
}

/* Cart Summary Locked */
.cart-summary.locked {
  opacity: 0.8;
}

.cart-summary.locked .cart-checkout {
  display: none;
}

/* Registration Prompts */
.registration-prompts {
  position: fixed;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1000;
  max-width: 500px;
  width: 90%;
}

.registration-prompt {
  background: var(--surface-strong);
  border: 1px solid var(--brand);
  border-radius: 20px;
  padding: 1.5rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  box-shadow: 0 10px 40px rgba(0,0,0,0.3);
  animation: slideUp 0.5s ease;
}

@keyframes slideUp {
  from {
    transform: translate(-50%, 100%);
    opacity: 0;
  }
  to {
    transform: translate(-50%, 0);
    opacity: 1;
  }
}

.prompt-icon {
  font-size: 2rem;
  width: 60px;
  height: 60px;
  background: rgba(124,245,155,0.1);
  border-radius: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.prompt-content {
  flex: 1;
}

.prompt-content h4 {
  color: var(--txt);
  margin-bottom: 0.3rem;
  font-size: 1.1rem;
}

.prompt-content p {
  color: var(--muted);
  margin: 0;
  font-size: 0.9rem;
}

.prompt-actions {
  display: flex;
  gap: 0.5rem;
  align-items: center;
}

.register-prompt-btn {
  background: linear-gradient(135deg, var(--brand), var(--brand-2));
  color: #0b0f14;
  border: none;
  padding: 0.6rem 1rem;
  border-radius: 20px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.9rem;
  display: flex;
  align-items: center;
  gap: 0.3rem;
}

.register-prompt-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(124,245,155,0.3);
}

.dismiss-prompt {
  background: transparent;
  color: var(--muted);
  border: 1px solid var(--border);
  width: 35px;
  height: 35px;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dismiss-prompt:hover {
  background: var(--surface);
  color: var(--txt);
  border-color: var(--brand);
}

/* Responsive Design for Registration Elements */
@media (max-width: 768px) {
  .banner-content {
    flex-direction: column;
    text-align: center;
    gap: 1rem;
  }

  .benefits-grid {
    grid-template-columns: 1fr;
  }

  .benefit-card {
    flex-direction: column;
    text-align: center;
  }

  .registration-prompt {
    flex-direction: column;
    text-align: center;
    gap: 1rem;
  }

  .prompt-actions {
    justify-content: center;
  }
}

@media (max-width: 480px) {
  .registration-banner {
    padding: 1.5rem;
  }

  .banner-text h3 {
    font-size: 1.3rem;
  }

  .registration-prompt {
    padding: 1rem;
  }

  .prompt-icon {
    width: 50px;
    height: 50px;
    font-size: 1.5rem;
  }
}

/* Navigation Premium Tabs */
.premium-tab.hidden {
  display: none !important;
  opacity: 0 !important;
  visibility: hidden !important;
}

.premium-tab {
  display: none !important;
  opacity: 0 !important;
  visibility: hidden !important;
}

.basic-tab {
  display: block !important;
}

/* Registration Required Page */
.registration-required-page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  background: linear-gradient(135deg, rgba(124,245,155,0.05), rgba(94,199,255,0.05));
}

.registration-required-content {
  background: var(--surface-strong);
  border-radius: 20px;
  padding: 3rem;
  text-align: center;
  max-width: 600px;
  width: 100%;
  border: 1px solid var(--border);
  box-shadow: 0 20px 60px rgba(0,0,0,0.3);
}

.required-icon {
  font-size: 4rem;
  color: #ff6b6b;
  margin-bottom: 1.5rem;
}

.required-message {
  font-size: 1.1rem;
  color: var(--muted);
  margin-bottom: 2rem;
  line-height: 1.6;
}

.required-benefits {
  background: rgba(255,255,255,0.02);
  border-radius: 15px;
  padding: 2rem;
  margin-bottom: 2rem;
  border: 1px solid var(--border);
}

.required-benefits h3 {
  color: var(--brand-2);
  margin-bottom: 1.5rem;
  font-size: 1.3rem;
}

.benefits-list {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.benefit-item {
  display: flex;
  align-items: center;
  gap: 0.8rem;
  color: var(--txt);
  font-size: 0.9rem;
}

.benefit-item i {
  color: var(--brand);
  width: 20px;
  flex-shrink: 0;
}

.required-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
}

/* Account Dropdown Styles */
.account-dropdown {
  position: relative;
}

.account-btn {
  background: transparent;
  border: 1px solid var(--border);
  color: var(--txt);
  padding: 0.5rem 1rem;
  border-radius: 20px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.9rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.account-btn:hover {
  background: var(--surface);
  border-color: var(--brand);
}

.account-menu {
  position: absolute;
  top: 100%;
  right: 0;
  background: var(--surface-strong);
  border: 1px solid var(--border);
  border-radius: 10px;
  padding: 0.5rem 0;
  min-width: 150px;
  opacity: 0;
  transform: translateY(-10px);
  pointer-events: none;
  transition: all 0.3s ease;
  z-index: 1000;
  box-shadow: 0 10px 30px rgba(0,0,0,0.3);
}

.account-menu.open {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.account-link {
  display: block;
  padding: 0.8rem 1rem;
  color: var(--txt);
  text-decoration: none;
  transition: all 0.3s ease;
  border: none;
  background: transparent;
  width: 100%;
  text-align: left;
  cursor: pointer;
  font-size: 0.9rem;
}

.account-link:hover {
  background: var(--surface);
  color: var(--brand);
}

.btn-linklike {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
}

/* Mobile Navigation Improvements */
@media (max-width: 768px) {
  .nav-links {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: var(--surface-strong);
    border: 1px solid var(--border);
    border-radius: 0 0 15px 15px;
    padding: 1rem;
    flex-direction: column;
    gap: 0.5rem;
    z-index: 1000;
  }

  .nav-links.show {
    display: flex;
  }

  .premium-tab.hidden {
    display: none !important;
  }

  .registration-required-page {
    padding: 1rem;
    min-height: calc(100vh - 80px);
  }

  .registration-required-content {
    padding: 2rem 1.5rem;
  }

  .required-icon {
    font-size: 3rem;
  }

  .required-actions {
    flex-direction: column;
  }

  .benefits-list {
    grid-template-columns: 1fr;
  }
}

/* Fix for glass morphism effects */
.glass {
  background: rgba(255,255,255,0.06) !important;
  backdrop-filter: saturate(140%) blur(10px) !important;
  -webkit-backdrop-filter: saturate(140%) blur(10px) !important;
}

/* Improve button hover effects */
.btn-primary:hover {
  transform: translateY(-2px) !important;
  box-shadow: 0 8px 25px rgba(124,245,155,0.3) !important;
}

.btn-outline:hover {
  transform: translateY(-2px) !important;
  box-shadow: 0 8px 25px rgba(124,245,155,0.2) !important;
}

/* Store notification improvements */
.store-notification {
  background: var(--surface-strong) !important;
  border: 1px solid var(--brand) !important;
  border-radius: 12px !important;
  padding: 1rem 1.5rem !important;
  color: var(--txt) !important;
  display: flex !important;
  align-items: center !important;
  gap: 0.8rem !important;
  z-index: 10000 !important;
  box-shadow: 0 10px 30px rgba(0,0,0,0.3) !important;
}

/* Recipe card improvements */
.recipe-card {
  background: var(--surface) !important;
  border-radius: 15px !important;
  overflow: hidden !important;
  transition: all 0.3s ease !important;
  border: 1px solid var(--border) !important;
}

.recipe-card:hover {
  transform: translateY(-3px) !important;
  box-shadow: 0 10px 30px rgba(124,245,155,0.1) !important;
  border-color: var(--brand) !important;
}

/* Featured card improvements */
.featured-card {
  background: var(--surface-strong) !important;
  border-radius: 20px !important;
  overflow: hidden !important;
  transition: all 0.3s ease !important;
  position: relative !important;
}

.featured-card:hover {
  transform: translateY(-5px) !important;
  box-shadow: 0 20px 40px rgba(124,245,155,0.1) !important;
}

/* Mobile responsiveness for registration elements */
@media (max-width: 480px) {
  .registration-required-content {
    padding: 1.5rem 1rem;
  }

  .required-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .required-message {
    font-size: 1rem;
  }

  .required-benefits {
    padding: 1.5rem;
  }
}

/* Config Page Styles */
.config-page {
  min-height: 100vh;
  padding: 3rem 0;
  background: linear-gradient(135deg, rgba(124,245,155,0.05), rgba(94,199,255,0.05));
}

.config-header {
  text-align: center;
  margin-bottom: 3rem;
}

.config-header h2 {
  color: var(--brand-2);
  font-size: 2.5rem;
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
}

.config-header p {
  color: var(--muted);
  font-size: 1.1rem;
}

.config-content {
  background: var(--surface-strong);
  border-radius: 20px;
  padding: 3rem;
  border: 1px solid var(--border);
  box-shadow: 0 20px 60px rgba(0,0,0,0.3);
}

.config-status {
  background: rgba(255,255,255,0.02);
  border-radius: 15px;
  padding: 2rem;
  margin-bottom: 2rem;
  border: 1px solid var(--border);
}

.config-status h3 {
  color: var(--txt);
  margin-bottom: 1.5rem;
  font-size: 1.3rem;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
  padding: 0.8rem;
  border-radius: 8px;
  font-size: 0.9rem;
}

.status-item.success {
  background: rgba(124,245,155,0.1);
  color: #7cf59b;
  border: 1px solid rgba(124,245,155,0.3);
}

.status-item.error {
  background: rgba(255,107,107,0.1);
  color: #ff6b6b;
  border: 1px solid rgba(255,107,107,0.3);
}

.status-item i {
  width: 20px;
  font-size: 1.1rem;
}

.config-form {
  margin-bottom: 3rem;
}

.config-form h3 {
  color: var(--txt);
  margin-bottom: 1rem;
  font-size: 1.3rem;
}

.config-help {
  color: var(--muted);
  margin-bottom: 2rem;
  line-height: 1.5;
}

.form-group {
  margin-bottom: 1.5rem;
}

.form-group label {
  display: block;
  color: var(--txt);
  margin-bottom: 0.5rem;
  font-weight: 500;
}

.form-group input {
  width: 100%;
  padding: 1rem;
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: 8px;
  color: var(--txt);
  font-size: 1rem;
  transition: all 0.3s ease;
}

.form-group input:focus {
  outline: none;
  border-color: var(--brand);
  box-shadow: 0 0 0 3px rgba(124,245,155,0.1);
}

.quick-setup {
  margin-bottom: 3rem;
}

.quick-setup h3 {
  color: var(--txt);
  margin-bottom: 1rem;
  font-size: 1.3rem;
}

.console-commands {
  background: var(--surface);
  border-radius: 10px;
  padding: 2rem;
  border: 1px solid var(--border);
}

.command-item {
  display: flex;
  gap: 1rem;
  margin-bottom: 1.5rem;
  padding: 1rem;
  background: rgba(255,255,255,0.02);
  border-radius: 8px;
  border: 1px solid var(--border);
}

.command-item:last-child {
  margin-bottom: 0;
}

.command-number {
  background: var(--brand);
  color: white;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 0.9rem;
  flex-shrink: 0;
}

.command-content p {
  margin: 0 0 0.5rem 0;
  color: var(--muted);
}

.command-content ul {
  margin: 0.5rem 0;
  padding-left: 1.5rem;
}

.command-content li {
  color: var(--muted);
  margin-bottom: 0.3rem;
}

.code-snippet {
  background: var(--surface-strong);
  border: 1px solid var(--border);
  border-radius: 6px;
  padding: 0.8rem;
  margin: 0.5rem 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: monospace;
  font-size: 0.9rem;
}

.copy-btn {
  background: var(--brand);
  color: white;
  border: none;
  border-radius: 4px;
  padding: 0.3rem 0.6rem;
  cursor: pointer;
  font-size: 0.8rem;
  transition: background-color 0.3s ease;
}

.copy-btn:hover {
  background: var(--brand-2);
}

.instructions-step {
  display: flex;
  gap: 1rem;
  margin-bottom: 1.5rem;
  padding: 1rem;
  background: rgba(255,255,255,0.02);
  border-radius: 10px;
  border: 1px solid var(--border);
}

.step-number {
  background: var(--brand);
  color: white;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 0.9rem;
  flex-shrink: 0;
}

.step-content h4 {
  color: var(--txt);
  margin-bottom: 0.5rem;
  font-size: 1rem;
}

.step-content p {
  color: var(--muted);
  margin: 0;
  line-height: 1.4;
}

.example {
  background: var(--surface);
  padding: 0.3rem 0.5rem;
  border-radius: 4px;
  font-family: monospace;
  font-size: 0.8rem;
  margin-top: 0.3rem;
  display: inline-block;
}

.config-troubleshooting {
  background: rgba(255,255,255,0.02);
  border-radius: 15px;
  padding: 2rem;
  border: 1px solid var(--border);
  margin-top: 2rem;
}

.config-troubleshooting h3 {
  color: var(--txt);
  margin-bottom: 1.5rem;
  font-size: 1.3rem;
}

.troubleshooting-item {
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border);
}

.troubleshooting-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.troubleshooting-item strong {
  color: var(--txt);
  display: block;
  margin-bottom: 0.3rem;
}

.troubleshooting-item p {
  color: var(--muted);
  margin: 0;
}

/* Mobile responsiveness for config page */
@media (max-width: 768px) {
  .config-page {
    padding: 2rem 0;
  }

  .config-header h2 {
    font-size: 2rem;
  }

  .config-content {
    padding: 2rem 1.5rem;
  }

  .config-status {
    padding: 1.5rem;
  }

  .form-actions {
    flex-direction: column;
  }

  .instructions-step {
    flex-direction: column;
    text-align: center;
  }

  .step-number {
    align-self: center;
  }
}

@media (max-width: 480px) {
  .config-header h2 {
    font-size: 1.8rem;
  }

  .config-content {
    padding: 1.5rem 1rem;
  }

  .status-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
}
