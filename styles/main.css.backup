.view-recipe {
  width: 100%;
  padding: 0.8rem;
  background: linear-gradient(135deg, var(--brand), var(--brand-2));
  color: #0b0f14;
  border: none;
  border-radius: 10px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.view-recipe:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(124,245,155,0.3);
}

/* All Recipes */
.all-recipes {
  padding: 4rem 0;
  background: rgba(255,255,255,0.02);
}

.recipes-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 1.5rem;
}

.recipe-card {
  background: var(--surface);
  border-radius: 15px;
  overflow: hidden;
  transition: all 0.3s ease;
  border: 1px solid var(--border);
}

.recipe-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(124,245,155,0.1);
  border-color: var(--brand);
}

.recipe-card .card-image {
  height: 200px;
}

.recipe-card .card-badge {
  position: absolute;
  top: 0.5rem;
  left: 0.5rem;
  background: linear-gradient(135deg, var(--brand), var(--brand-2));
  font-size: 0.7rem;
  padding: 0.2rem 0.5rem;
}

.recipe-card .card-content {
  padding: 1rem;
}

.recipe-card .recipe-category {
  background: var(--surface-strong);
  color: var(--brand);
  padding: 0.2rem 0.5rem;
  border-radius: 8px;
  font-size: 0.8rem;
  margin-bottom: 0.5rem;
  display: inline-block;
}

.recipe-card .card-title {
  font-size: 1.1rem;
  margin-bottom: 0.5rem;
}

.recipe-card .card-description {
  font-size: 0.9rem;
  margin-bottom: 0.8rem;
  line-height: 1.4;
}

.recipe-card .card-meta {
  margin-bottom: 0.8rem;
  justify-content: flex-start;
  gap: 1rem;
}

.recipe-card .btn-outline {
  width: 100%;
  padding: 0.6rem;
  border: 1px solid var(--brand);
  background: transparent;
  color: var(--brand);
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.9rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.3rem;
}

.recipe-card .btn-outline:hover {
  background: var(--brand);
  color: #0b0f14;
}

/* Newsletter Section */
.newsletter-section {
  padding: 4rem 0;
  background: linear-gradient(135deg, rgba(124,245,155,0.05), rgba(94,199,255,0.05));
}

.newsletter-content {
  background: var(--surface-strong);
  border-radius: 20px;
  padding: 2rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2rem;
}

.newsletter-text h3 {
  color: var(--brand);
  margin-bottom: 0.5rem;
  font-size: 1.5rem;
}

.newsletter-text p {
  color: var(--muted);
  margin: 0;
}

.newsletter-form {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.newsletter-form input {
  padding: 0.8rem 1rem;
  border: 1px solid var(--border);
  border-radius: 25px;
  background: var(--surface);
  color: var(--txt);
  font-size: 1rem;
  min-width: 200px;
}

.newsletter-form input::placeholder {
  color: var(--muted);
}

.newsletter-form .btn-primary {
  padding: 0.8rem 1.5rem;
  border-radius: 25px;
  font-size: 0.9rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

/* Recipe Detail Page */
.recipe-detail {
  background: var(--bg);
}

.recipe-header {
  background: linear-gradient(135deg, rgba(124,245,155,0.1), rgba(94,199,255,0.1));
  padding: 2rem 0;
}

.breadcrumb {
  margin-bottom: 2rem;
}

.breadcrumb a {
  color: var(--muted);
  text-decoration: none;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  transition: color 0.3s ease;
}

.breadcrumb a:hover {
  color: var(--brand);
}

.recipe-hero {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: center;
}

.recipe-hero-content .recipe-category {
  background: var(--surface-strong);
  color: var(--brand);
  padding: 0.3rem 0.8rem;
  border-radius: 15px;
  font-size: 0.9rem;
  margin-bottom: 1rem;
  display: inline-block;
}

.recipe-hero-content .recipe-title {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  background: linear-gradient(135deg, var(--brand), var(--brand-2));
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.recipe-hero-content .recipe-description {
  font-size: 1.1rem;
  color: var(--muted);
  line-height: 1.6;
  margin-bottom: 2rem;
}

.recipe-hero-image {
  position: relative;
  border-radius: 20px;
  overflow: hidden;
}

.recipe-hero-image img {
  width: 100%;
  height: 400px;
  object-fit: cover;
}

.featured-badge {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: linear-gradient(135deg, #ff4757, #ff3838);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-size: 0.8rem;
  display: flex;
  align-items: center;
  gap: 0.3rem;
}

.recipe-content {
  padding: 4rem 0;
}

.content-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
}

.ingredients-section,
.instructions-section {
  background: var(--surface);
  border-radius: 20px;
  padding: 2rem;
  border: 1px solid var(--border);
}

.subsection-title {
  color: var(--brand-2);
  font-size: 1.5rem;
  margin-bottom: 1.5rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.ingredient-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 0.8rem 0;
  border-bottom: 1px solid rgba(255,255,255,0.1);
}

.ingredient-item:last-child {
  border-bottom: none;
}

.ingredient-amount {
  background: var(--brand);
  color: #0b0f14;
  padding: 0.3rem 0.6rem;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.9rem;
  min-width: 60px;
  text-align: center;
}

.ingredient-icon {
  font-size: 1.5rem;
  width: 40px;
  text-align: center;
}

.ingredient-name {
  flex: 1;
  color: var(--txt);
}

.instruction-step {
  display: flex;
  gap: 1rem;
  padding: 1rem 0;
  border-bottom: 1px solid rgba(255,255,255,0.1);
  cursor: pointer;
  transition: background 0.3s ease;
}

.instruction-step:hover {
  background: rgba(255,255,255,0.02);
}

.instruction-step:last-child {
  border-bottom: none;
}

.step-number {
  background: linear-gradient(135deg, var(--brand), var(--brand-2));
  color: #0b0f14;
  width: 35px;
  height: 35px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
  color: var(--txt);
  line-height: 1.6;
}

.additional-info {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.nutrition-section,
.tips-section {
  background: var(--surface-strong);
  border-radius: 15px;
  padding: 1.5rem;
  border: 1px solid var(--border);
}

.nutrition-facts {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.nutrition-item {
  display: flex;
  justify-content: space-between;
  padding: 0.5rem 0;
  border-bottom: 1px solid rgba(255,255,255,0.1);
}

.nutrition-item:last-child {
  border-bottom: none;
}

.nutrition-label {
  color: var(--muted);
  font-size: 0.9rem;
}

.nutrition-value {
  color: var(--brand);
  font-weight: 600;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 0.8rem;
  color: var(--txt);
  line-height: 1.5;
}

.tip-item i {
  color: #2ecc71;
  margin-top: 0.2rem;
  flex-shrink: 0;
}

/* Related Recipes */
.related-recipes {
  padding: 4rem 0;
  background: rgba(255,255,255,0.02);
}

.related-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.related-card {
  background: var(--surface);
  border-radius: 15px;
  overflow: hidden;
  transition: all 0.3s ease;
  border: 1px solid var(--border);
}

.related-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(124,245,155,0.1);
}

.related-image {
  height: 180px;
  overflow: hidden;
}

.related-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.related-card:hover .related-image img {
  transform: scale(1.05);
}

.related-content {
  padding: 1.5rem;
}

.related-category {
  background: var(--surface-strong);
  color: var(--brand-2);
  padding: 0.2rem 0.5rem;
  border-radius: 8px;
  font-size: 0.8rem;
  margin-bottom: 0.5rem;
  display: inline-block;
}

.related-title {
  font-size: 1.1rem;
  margin-bottom: 0.5rem;
  color: var(--txt);
}

.related-description {
  color: var(--muted);
  font-size: 0.9rem;
  margin-bottom: 1rem;
  line-height: 1.4;
}

.related-card .btn-outline {
  width: 100%;
  padding: 0.6rem;
  border: 1px solid var(--brand-2);
  background: transparent;
  color: var(--brand-2);
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.9rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.3rem;
}

.related-card .btn-outline:hover {
  background: var(--brand-2);
  color: #0b0f14;
}

/* Call to Action */
.recipe-cta {
  padding: 4rem 0;
  background: linear-gradient(135deg, rgba(124,245,155,0.05), rgba(94,199,255,0.05));
}

.cta-content {
  background: var(--surface-strong);
  border-radius: 20px;
  padding: 2rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2rem;
  border: 1px solid var(--border);
}

.cta-text h3 {
  color: var(--brand);
  margin-bottom: 0.5rem;
  font-size: 1.5rem;
}

.cta-text p {
  color: var(--muted);
  margin: 0;
}

.cta-actions {
  display: flex;
  gap: 1rem;
}

/* Notifications */
.notification {
  position: fixed;
  top: 2rem;
  right: 2rem;
  background: var(--surface-strong);
  border: 1px solid var(--brand);
  border-radius: 10px;
  padding: 1rem 1.5rem;
  color: var(--txt);
  display: flex;
  align-items: center;
  gap: 0.8rem;
  z-index: 1000;
  animation: slideIn 0.3s ease;
}

.notification.success {
  border-color: #2ecc71;
}

.notification.error {
  border-color: #e74c3c;
}

@keyframes slideIn {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

.fade-in {
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.fade-in-up {
  animation: fadeInUp 0.6s ease;
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(30px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Responsive Design */
@media (max-width: 768px) {
  .controls-content {
    flex-direction: column;
    gap: 1rem;
  }

  .search-box {
    width: 100%;
    min-width: auto;
  }

  .category-filters {
    justify-content: center;
  }

  .hero-stats {
    gap: 1.5rem;
  }

  .stat-number {
    font-size: 2rem;
  }

  .featured-grid {
    grid-template-columns: 1fr;
  }

  .recipes-grid {
    grid-template-columns: 1fr;
  }

  .recipe-hero {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .content-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .newsletter-content {
    flex-direction: column;
    text-align: center;
  }

  .cta-content {
    flex-direction: column;
    text-align: center;
  }

  .cta-actions {
    justify-content: center;
  }

  .related-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 480px) {
  .recipes-hero {
    padding: 60px 0 40px;
  }

  .hero-title {
    font-size: 2rem;
  }

  .hero-subtitle {
    font-size: 1rem;
  }

  .recipe-hero-content .recipe-title {
    font-size: 2rem;
  }

  .ingredients-section,
  .instructions-section {
    padding: 1.5rem;
  }

